{
    "manifest_version": 2,

    "name": "Comment Tracker example",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "1.0",

    "content_scripts": [{
        "matches": ["http://hackaday.com/*"],
        "css": ["commentStyles.css"],
        "js": ["comment.js"],
        "run_at": "document_idle"
    }],

    "permissions": [
        "storage"
    ],
}
